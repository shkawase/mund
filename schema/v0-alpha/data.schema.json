{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "data.schema.json",
    "title": "Î¼ND Data Entry",
    "description": "Schema for data entries in muon nuclear data",
    "type": "object",
    "properties": {
        "datasetId": {
            "type": "string",
            "description": "unique identifier for data entry"
        },
        "bibId": {
            "type": "string",
            "description": "unique identifier for reference bibliography"
        },
        "comment": {
            "type": "string"
        },
        "datasetType": {
            "enum": [
                "experiment",
                "theory",
                "evaluation"
            ],
            "default": "experiment",
            "description": ""
        },
        "nuclide": {
            "$ref": "nuclide.schema.json"
        },
        "observable": {
            "$ref": "observable.schema.json"
        },
        "experimentalConditionId": {
            "type": "string"
        }
    },
    "required": [
        "datasetId",
        "bibId",
        "datasetType",
        "nuclide",
        "observable"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "datasetType": {
                        "const": "experiment"
                    }
                }
            },
            "then": {
                "required": ["experimentalConditionId"]
            }
        }
    ]
}

